{
    "name": "@wonderland/interop",
    "version": "0.1.0",
    "description": "Complete SDK for blockchain interoperability with cross-chain operations and address utilities",
    "repository": {
        "type": "git",
        "url": "https://github.com/defi-wonderland/interop-sdk.git",
        "directory": "apps/sdk"
    },
    "license": "MIT",
    "author": "Wonderland",
    "type": "module",
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "directories": {
        "src": "src"
    },
    "files": [
        "dist/*",
        "package.json",
        "!**/*.tsbuildinfo"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "check-types": "tsc --noEmit -p ./tsconfig.json",
        "clean": "rm -rf dist/",
        "format": "prettier --check \"{src,test}/**/*.{js,ts,json}\"",
        "format:fix": "prettier --write \"{src,test}/**/*.{js,ts,json}\"",
        "lint": "eslint \"{src,test}/**/*.{js,ts,json}\"",
        "lint:fix": "pnpm lint --fix",
        "test": "vitest run --config vitest.config.ts --passWithNoTests",
        "test:cov": "vitest run --config vitest.config.ts --coverage"
    },
    "dependencies": {
        "@wonderland/interop-addresses": "workspace:*",
        "@wonderland/interop-cross-chain": "workspace:*"
    }
}
